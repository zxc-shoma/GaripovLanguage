<Window x:Class="GaripovLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GaripovLanguage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="res/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#e7fabf" />

        <TextBlock Text="Языковая школа Лангуаге" VerticalAlignment="Center" FontSize="18" FontFamily="Comic Sans MS" HorizontalAlignment="Center"></TextBlock>


        <Image Source="res/school_logo.png" HorizontalAlignment="Left"/>
        <Frame Name="MainFrame" Grid.Row="1" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
